<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ListaZakupowa.Views.ShoppingItems"
             xmlns:controls="clr-namespace:ListaZakupowa.Controls"
             Title="ShoppingItems">

    <CollectionView
        ItemsSource="{Binding Items}"
        Header="This is a list of items to buy"
        Footer="End of list. Yipeee!">

        <CollectionView.ItemTemplate>

            <DataTemplate>

                <controls:ShoppingItem
                    ItemName="{Binding Name}"
                    Quantity="{Binding Quantity}"
                    QuantityUnit="{Binding QuantityUnit}"
                    DefaultShop="{Binding DefaultShop}"
                    />

            </DataTemplate>

        </CollectionView.ItemTemplate>

    </CollectionView>

</ContentPage>