<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ListaZakupowa.Views.NewCategoryPage"
             Title="NewCategoryPage">

    <VerticalStackLayout
        Padding="40">

        <Label Text="Fill up these Quotas" />
        
        <Editor 
            x:Name="CategoryEditor"
            Placeholder="Provide a name for a new category..."/> 
        
        <Button 
            Text="Create"
            Clicked="CreateButton_Clicked"/>

    </VerticalStackLayout>
    
</ContentPage>