<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ListaZakupowa.Views.NewItemPage"
             Title="NewItemPage">
    
    <VerticalStackLayout Padding="40">

        <Label 
            Text="Fill up these Quotas"
            FontSize="24"
            Margin="10"/>

        <Editor 
            x:Name="NameEditor"
            Placeholder="Item name"/>

        <HorizontalStackLayout
            Margin="10"
            HorizontalOptions="Center">

            <Picker
                x:Name="CategoryPicker"
                Title="Select the category"/>
            
        </HorizontalStackLayout>
        
        <Editor 
            x:Name="QuantityEditor"
            Placeholder="Quantity"/>

        <Editor 
            x:Name="UnitEditor"
            Placeholder="Quantity unit"/>

        <Editor 
            x:Name="ShopEditor"
            Placeholder="Store, where the item is"/>
        
        <Button 
            Text="Add new item"
            Clicked="CreateButton_Clicked"/>

    </VerticalStackLayout>
    
</ContentPage>